<h1>Burgers and Burgers and Burgers!</h1>


<div class="container">
    <div class="row">
        <div class="col-md-4">
            <h2>Ordered Burgers:</h2>

            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-4">

            <h2>Order a Burger</h2>
            <form class="create-form">

                <div class="form-group">
                    <label for="ca">What Kind of Burger would you like?</label>
                    <input type="text" id="ca" name="name">
                </div>

                <div class="form-group">
                    <label for="devoured">Has this been eaten?</label><br>
                    <input type="radio" name="devoured" value="1" checked> Already Eaten!<br>
                    <input type="radio" name="devoured" value="0">No, Order this Burger!
                </div>

                <button type="submit" class="btn btn-primary">Order Burger</button>
            </form>

        </div>
        <div class="col-md-4">
            <h2>Served Burgers:</h2>

            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>

    </div>
    <br>
    <div class="row">
        <div class="col-md-12">
            <img src="/assets/img/hamburgler.jpg" id="pics">
        </div>
    </div>
</div>